<%= simple_form_for @daily_allowance, url: [ @company, @daily_allowance], wrapper: :horizontal_form do |f| %>

  <div class="form-inputs mb-3">
    <%= f.input :name %>
    <%= f.input :one_day_allowance %>
    <%= f.input :accommodation_day_allowance %>
    <%= f.input :return_day_allowance %>
  </div>

  <div class="form-actions mb-3">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
